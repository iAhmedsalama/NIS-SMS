@model Instructor


@{ 
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title="Edit Instructor";
} 
   
<form  asp-controller="Instructor" asp-action="SaveInstructor" asp-route-id="@Model.ID"  method="post" >
      <div asp-validation-summary="All" class="text-danger"></div>
      <input asp-for="ID" type="hidden"  class="form-control" /> <!-- ID Passed to action which will edit instructor -->

   <div class="w-75 m-auto">


        <div class="form-group">
              <label asp-for="Name" class="form-label mt-4"></label>
              <input asp-for="Name" class="form-control">
              <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="form-label mt-4"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="Department" class="form-label mt-4">Department</label>
     
          <select name="dept_id" id="Department" class="form-control">
             @foreach (var item in ViewBag.Department)
                {
                    if(item.ID == Model.dept_id)
                    {
                       <option value=@item.ID selected>@item.Name</option>

                    }else
                    {
                       <option value=@item.ID >@item.Name</option>
                 
                    }

                }
          </select>
        </div>

        <div class="form-group">
          <label asp-for="Image" class="form-label mt-4">Image</label>
          <input asp-for="Image" type="file" class="form-control" >
        </div>

    <button type="submit" class="btn btn-success my-5">Save</button>
   </div>
</form>

<partial name="/Views/Shared/_partial_validation.cshtml"></partial>
