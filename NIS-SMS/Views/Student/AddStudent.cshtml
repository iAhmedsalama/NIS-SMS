@model Student 
@{
    SelectList Department;
    if(Model !=null)
    {
        Department=new SelectList(ViewBag.Department,"ID","Name",Model.Department);
    }
    else
    {
        Department=new SelectList(ViewBag.Department,"ID","Name");
    }
}


@{ 
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title="Add Student";
} 

<section>
    <div>
<form  asp-action="SaveAdd" asp-controller="Student" class="d-flex justify-content-center">
    <div class="w-75">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name"  class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Degree" class="form-label mt-4"></label>
            <input min="0" max="100" asp-for="Degree" class="form-control"/>
            <span class="text-danger" asp-validation-for="Degree"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="form-label mt-4"></label>
            <input asp-for="Address" class="form-control" />
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
   
        <div class="form-group">
            <label asp-for="dept_id" class="form-label mt-4">Department Name</label>
            <select asp-for="dept_id" asp-items="Department" class="form-control">
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="form-label mt-4"></label>
            <input type="file" asp-for="Image"  class="form-control"/>
            <span class="text-danger" asp-validation-for="Image"></span>

        </div>

        <input type="submit" class="btn btn-success mt-4" value="Save" />
    </div>

</form>
       
    </div>
    <div class=" d-flex justify-content-center">
     <a asp-controller="Student" asp-action="GetAllStudents" class="btn btn-primary w-25">Back</a>
    </div>
</section>

<br />
@section Validation{
    <partial name="/Views/Shared/_partial_validation.cshtml"/>
}